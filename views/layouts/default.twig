{% extends "layouts/base.twig" %}

{% block page %}
  <div id="page" class="hfeed">
    <header id="head" class="grid-row" role="banner">
      <div class="grid-column -medium-12">
        {% block head %}
          {% include 'partials/head.twig' %}
        {% endblock %}
      </div>
		</header>

		<div id="body" class="grid-row">
      <div class="grid-column -medium-12">
        <div class="body">
          <main class="main" role="main">
            {% block body %}
            {% endblock %}
          </main>

          {% block sidebar %}
            <div class="sidebar">
              {% if primary_sidebar %}
                {{ primary_sidebar }}
              {% endif %}
            </div>
          {% endblock %}
        </div>
      </div>
		</div>

    <footer id="footer" class="grid-row" role="contentinfo">
      <div class="grid-column -medium-12">
        {% block footer %}
          {% include 'partials/footer.twig' %}
        {% endblock %}
      </div>
		</footer>
	</div>
{% endblock %}
