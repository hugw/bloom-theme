{% if posts is not empty %}
  <div class="recent-posts">
    {% for post in posts %}
      <div class="recent-posts_item">
        <div class="recent-posts_thumbnail">
          <a href="{{ post.link }}" title="{{ post.title | e('html') }}">
            <img src="{{ post.thumbnail.src('recent-posts') }}" alt="{{ post.title | e('html') }}" title="{{ post.title | e('html') }}" />
          </a>
        </div>

        <div class="recent-posts_body">
          <div class="recent-posts_category">
            {% for category in post.categories %}
              <a href="{{ category.link }}">{{ category.title }}</a>
            {% endfor %}
          </div>
          <div class="recent-posts_title">
            <a href="{{ post.link }}" title="{{ post.title | e('html') }}">
              {{ post.title }}
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}
